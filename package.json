{
  "name": "docker-nas-config",
  "version": "1.0.0",
  "packageManager": "pnpm@10.16.1",
  "description": "Docker Compose configuration for a fully-featured NAS solution with media management, download automation, and content streaming",
  "author": "dipodidae",
  "license": "MIT",
  "homepage": "https://github.com/dipodidae/nas#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dipodidae/nas.git"
  },
  "bugs": {
    "url": "https://github.com/dipodidae/nas/issues"
  },
  "keywords": [
    "docker",
    "docker-compose",
    "nas",
    "media-server",
    "jellyfin",
    "sonarr",
    "radarr",
    "bazarr",
    "prowlarr",
    "qbittorrent",
    "swag",
    "watchtower",
    "media-management",
    "automation",
    "home-server"
  ],
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "py:lint": "bash -c '. .venv/bin/activate && ruff check scripts'",
    "up": "docker compose up -d",
    "down": "docker compose down",
    "restart": "docker compose restart",
    "logs": "docker compose logs -f",
    "pull": "docker compose pull",
    "update": "docker compose pull && docker compose up -d",
    "py:venv": "bash -c 'python -m venv .venv && . .venv/bin/activate && pip install -r scripts/requirements.txt'",
    "py:deps": "bash -c '. .venv/bin/activate && pip install -r scripts/requirements.txt'",
    "scripts:test": "bash -c '. .venv/bin/activate && python scripts/test_scripts.py'",
    "prowlarr:check": "bash -c '. .venv/bin/activate && python scripts/prowlarr_priority_checker.py'",
    "prowlarr:set": "bash -c '. .venv/bin/activate && python scripts/prowlarr_priority_setter.py'",
    "prowlarr:set:dry": "bash -c '. .venv/bin/activate && python scripts/prowlarr_priority_setter.py --dry-run'",
    "backup:config": "bash -c '. .venv/bin/activate && python scripts/config_backup.py'",
    "backup:config:list": "bash -c '. .venv/bin/activate && python scripts/config_backup.py --list'",
    "backup:config:retain14": "bash -c '. .venv/bin/activate && python scripts/config_backup.py --retain 14'",
    "backup:config:fast": "bash -c '. .venv/bin/activate && python scripts/config_backup.py --fast --no-checksum'",
    "audit:perms": "bash -c '. .venv/bin/activate && python scripts/permissions_auditor.py'",
    "audit:perms:share": "bash -c '. .venv/bin/activate && python scripts/permissions_auditor.py --include-share'",
    "audit:perms:fix": "bash -c '. .venv/bin/activate && python scripts/permissions_auditor.py --fix'",
    "audit:perms:fix:dry": "bash -c '. .venv/bin/activate && python scripts/permissions_auditor.py --fix --dry-run'",
    "verify:update": "bash -c '. .venv/bin/activate && python scripts/post_update_verifier.py'",
    "logs:prune": "bash -c '. .venv/bin/activate && python scripts/log_pruner.py'",
    "logs:prune:dry": "bash -c '. .venv/bin/activate && python scripts/log_pruner.py --dry-run'"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2"
  }
}
